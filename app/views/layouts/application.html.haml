    = favicon_link_tag 'favicon.png'
    %link{:href => "http://fonts.googleapis.com/css?family=Lato", :rel => "stylesheet", :type => "text/css"}/
    %link{:href => "//maxcdn.bootstrapcdn.com/font-awesome/4.2.0/css/font-awesome.min.css", :rel => "stylesheet"}/
    /[if lte IE 7]
      <style type="text/css">
      \.nav li {
      display: inline;
      zoom: 1;
      margin: 0 10px;
      }
      </style>
  %body
    .navbar.navbar-inverse{:style => "border-radius: 0px"}
      .navbar-header
        %button.navbar-toggle{"data-target" => ".navbar-inverse-collapse", "data-toggle" => "collapse", :type => "button"}
          %span.icon-bar
          %span.icon-bar
          %span.icon-bar
      .navbar-collapse.collapse.navbar-inverse-collapse
        %ul.nav.navbar-nav
          %li.brand
          %li
            %a{:href => "/"}= I18n.t("layouts.application.home", :default => "Home")
          %li
            %a{:href => "/about"}= I18n.t("layouts.application.about", :default => "About")
          %li
            %a{:href => "/FAQ"}= I18n.t("layouts.application.faqs", :default => "FAQs")
          %li
            - if I18n.locale == :es
              = link_to "English", set_language_english_path
            - elsif I18n.locale == :en
              = link_to "EspaÃ±ol", set_language_spanish_path
        %ul.nav.navbar-nav.navbar-right
          %li
            %a{:href => "/legalaid"}= I18n.t("layouts.application.legal_aid", :default => "LEGAL AID!")
    #content.container
      = yield
    %footer.footer{:class => ".sr-only"}
      .container
        .row{:style => "font-size: .9em"}
          %span
          %div
            Know someone with a juvenile record? Help out by sharing expunge.io!&nbsp&nbsp&nbsp
            %a{:href => "https://twitter.com/intent/tweet?text=If%20you%20have%20a%20juvenile%20record%2C%20you%20may%20be%20able%20to%20expunge%20it.%20Check%20out%20%23expungeio!&tw_p=tweetbutton&url=http%3A%2F%2Fexpunge.io"}
              %i.fa.fa-twitter
            %a{:href => "https://www.facebook.com/sharer/sharer.php?app_id=309437425817038&sdk=joey&u=http%3A%2F%2Fexpunge.io", :target => "_blank"}
              %i.fa.fa-facebook
          %span
